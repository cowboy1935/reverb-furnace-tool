self.addEventListener('install', event => {
  console.log('FurnaceCalc service worker installed');
  event.waitUntil(
    caches.open('furnacecalc-cache').then(cache => {
      return cache.addAll([
        './index.html',
        './manifest.json',
        './icon-192.png',
        './icon-512.png',
        './splash.png'
      ]);
    })
  );
});

self.addEventListener('fetch', event => {
  event.respondWith(
    caches.match(event.request).then(response => {
      return response || fetch(event.request);
    })
  );
});
